[Unit]
Description=Bloonix Web
After=network.target

[Service]
Type=forking
PIDFile=@@RUNDIR@@/bloonix/bloonix-webapp.pid
ExecStartPre=@@USRLIBDIR@@/bloonix/bin/bloonix-pre-start @@CACHEDIR@@/bloonix @@LIBDIR@@/bloonix @@LOGDIR@@/bloonix @@RUNDIR@@/bloonix
ExecStart=@@SRVDIR@@/bloonix/webapp/scripts/bloonix-webapp --pid-file @@RUNDIR@@/bloonix/bloonix-webapp.pid --config-file @@CONFDIR@@/bloonix/webapp/main.conf
ExecReload=/bin/kill -1 $MAINPID
ExecStop=/bin/kill -15 $MAINPID
PrivateTmp=true
TimeoutStartSec=5
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
